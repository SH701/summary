generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"   
  url      = env("DATABASE_URL")
}

model Document {
  id            String    @id @default(uuid())
  
  filename      String                      
  mimetype      String                      
  size          Int                         
  
  content       String                      
  summary       String?                     
  tags          Json
  title         String?                     
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
